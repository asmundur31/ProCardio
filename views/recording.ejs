<%- include(root + '/views/header') -%>
<main>
  <div class="recording">
    <div class="row">
      <h2><%= recording.experiment.fileName %></h2>
      <div class="col-12">
        <p>Name: <%= recording.experiment.name %></p>
        <p>Type: <%= recording.experiment.type %></p>
        <p>Duration: <%= recording.experiment.duration %></p>
        <p>Start: <%= recording.experiment.startTime %></p>
        <p>End: <%= recording.experiment.endTime %></p>
      </div>
      <div class="col-12">
        <% for(var i=0; i<recording.treadmill.measurements.length; i++) { %>
          <div>
            Data point <%= i %>:
          </div>
          <div class="ms-3">
            Time stamp: <%= recording.treadmill.measurements[i].time %>
          </div>
          <div class="ms-3">
            Speed: <%= recording.treadmill.measurements[i].speed %>km/h
          </div>
          <div class="ms-3 mb-3">
            Incline: <%= recording.treadmill.measurements[i].incline %>%
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <a href="/recordings" class="btn btn-secondary mt-5">Back</a>
</main>
<%- include(root + '/views/footer') -%>
