<%- include(root + '/views/header') -%>
<main>
  <div class="recording">
    <div class="row">
      <h2><%= recording.experiment.name %></h2>
      <div class="col-12">
        <p>Type: <%= recording.experiment.type %></p>
        <p>File: <%= recording.experiment.fileName %></p>
        <p>Duration: <%= recording.experiment.duration %></p>
        <p>Start: <%= recording.experiment.startTime %></p>
        <p>End: <%= recording.experiment.endTime %></p>
      </div>
      <div class="col-6">
        <canvas id="SpeedChart"></canvas>
      </div>
      <div class="col-6">
        <canvas id="DistanceChart"></canvas>
      </div>
      <div class="col-6">
        <canvas id="HeartRateChart"></canvas>
      </div>
      <div class="col-12">
        <h3>System evaluation</h3>
      </div>
      <div class="col-6">
        <canvas id="inclineComparisonChart"></canvas>
      </div>
    </div>
  </div>
  <a href="/recordings" class="btn btn-secondary mt-5">Back</a>
  
</main>

<!-- Include all scripts needed -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script type="module" src="<% root %>/static/js/plot.js"></script>
<%- include(root + '/views/footer') -%>
